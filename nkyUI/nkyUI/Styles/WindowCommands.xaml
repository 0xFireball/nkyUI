<Styles xmlns="https://github.com/avaloniaui"
        xmlns:controls="clr-namespace:nkyUI.Controls;assembly=nkyUI"
        xmlns:local="clr-namespace:nkyUI.Styles;assembly=nkyUI">
  <!--WindowCommands control styles-->
  <Style Selector="Button">
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="Foreground" Value="{StyleResource ThemeForegroundLightBrush}" />
    <Setter Property="FontWeight" Value="SemiBold" />
  </Style>
  <Style Selector="Button:pointerover /template/ ContentPresenter">
    <Setter Property="TextBlock.Foreground" Value="{StyleResource ThemeForegroundBrightBrush}" />
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
  </Style>
  <Style Selector="Button:pressed  /template/ ContentPresenter">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
  </Style>
</Styles>