<Style xmlns="https://github.com/avaloniaui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:mut="https://github.com/avaloniaui/mutable"
       xmlns:sys="clr-namespace:System;assembly=mscorlib">
  <Style.Resources>
    <!--Brushes-->

    <!--The main accent color-->
    <SolidColorBrush x:Key="AccentBaseColorBrush">#FF119EDA</SolidColorBrush>

    <!--A neutral color (black or white) that should be used against a background of the base accent color-->
    <SolidColorBrush x:Key="AccentBaseColorInverseNeutralBrush">#FFFDFDFD</SolidColorBrush>
    <SolidColorBrush x:Key="AccentBaseColorInverseNeutralBrushFaded">#99FDFDFD</SolidColorBrush>

    <!--A callout color-->
    <SolidColorBrush x:Key="HighlightColorBrush">#FF086F9E</SolidColorBrush>

    <!--80%-->
    <SolidColorBrush x:Key="AccentColor">#CC119EDA</SolidColorBrush>
    <!--60%-->
    <SolidColorBrush x:Key="AccentColor2">#99119EDA</SolidColorBrush>
    <!--40%-->
    <SolidColorBrush x:Key="AccentColor3">#66119EDA</SolidColorBrush>
    <!--20%-->
    <SolidColorBrush x:Key="AccentColor4">#33119EDA</SolidColorBrush>

    <!--A lighter version of the base theme-->
    <!--80%-->
    <SolidColorBrush x:Key="AccentColorLight">#CC74D4FC</SolidColorBrush>
    <!--60%-->
    <SolidColorBrush x:Key="AccentColorLight2">#9974D4FC</SolidColorBrush>
  </Style.Resources>
</Style>