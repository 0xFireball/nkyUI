<Style xmlns="https://github.com/avaloniaui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:mut="https://github.com/avaloniaui/mutable"
       xmlns:sys="clr-namespace:System;assembly=mscorlib">
  <Style.Resources>
    <!--Brushes-->

    <!--The main accent color-->
    <SolidColorBrush x:Key="AccentBaseColorBrush">#FFE51400</SolidColorBrush>

    <!--A neutral color (black or white) that should be used against a background of the base accent color-->
    <SolidColorBrush x:Key="AccentBaseColorInverseNeutralBrush">#FFFDFDFD</SolidColorBrush>
    <SolidColorBrush x:Key="AccentBaseColorInverseNeutralBrushFaded">#99FDFDFD</SolidColorBrush>

    <!--A callout color-->
    <SolidColorBrush x:Key="HighlightColorBrush">#FFA90E00</SolidColorBrush>

    <!--80%-->
    <SolidColorBrush x:Key="AccentColor">#CCE51400</SolidColorBrush>
    <!--75%-->
    <SolidColorBrush x:Key="AccentColor1">#BBE51400</SolidColorBrush>
    <!--60%-->
    <SolidColorBrush x:Key="AccentColor2">#99E51400</SolidColorBrush>
    <!--40%-->
    <SolidColorBrush x:Key="AccentColor3">#66E51400</SolidColorBrush>
    <!--20%-->
    <SolidColorBrush x:Key="AccentColor4">#33E51400</SolidColorBrush>

    <!--A lighter version of the base theme-->
    <!--80%-->
    <SolidColorBrush x:Key="AccentColorLight">#CCFF6F61</SolidColorBrush>
    <!--60%-->
    <SolidColorBrush x:Key="AccentColorLight2">#99FF6F61</SolidColorBrush>
  </Style.Resources>
</Style>